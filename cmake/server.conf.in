[global]
tree.py: cherrypy.Application(geoweb.Root())
log.error_file: '@LOG_ERROR_FILE@'
log.access_file: '@LOG_ACCESS_FILE@'
log.screen = True
log.debug: True #@LOG_DEBUG@
geoweb.user: '@GEOWEB_USER@'
geoweb.group: '@GEOWEB_GROUP@'
tools.esgf_session_auth.on = True
tools.sessions.on = True

mongo.host = 'localhost'
mongo.db = 'documents'



[/]
tools.staticdir.root: @STATICDIR_ROOT@
tools.staticdir.on = True
tools.staticdir.dir = "web"
tools.staticdir.index: "index.html"
tools.response_headers.on = True
tools.response_headers.headers = [('Expires', 'Sun, 19 Nov 1985 05:00:00 GMT'), ('Cache-Control', 'no-store, no-cache, must-revalidate, post-check=0, pre-check=0'), ('Pragma', 'no-cache')]

[/apps/common]
# Turn off header update for things we want to cache
tools.response_headers.on = False


[/data]
tools.staticdir.on = True
tools.staticdir.dir = "@DATA_ROOT@"

[/ws]
tools.websocket.on: True
tools.websocket.handler_cls: modules.geowebsocket.WebSocketRouter
